<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTheme" parent="MainTheme.Base">
    </style>
    <!-- Base theme applied no matter what API -->
    <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
        <item name="windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <!-- Set theme colors from https://aka.ms/material-colors -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#2196F3</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#1976D2</item>
        <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
        <item name="colorAccent">@color/primary</item>
        <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
        <item name="android:timePickerStyle">@style/TimePickerLightStyle</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="TimePickerLightStyle" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:headerTimeTextAppearance">@color/primary</item>
        <item name="android:headerBackground">@color/onprimary</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:numbersTextColor">#ffffff</item>
        <item name="android:numbersInnerTextColor">#ffffff</item>
        <item name="android:numbersSelectorColor">@color/primary</item>
        <item name="android:numbersBackgroundColor">@color/primary</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary</item>
    </style>
    <style name="DatePickerLightStyle" parent="android:Widget.Material.DatePicker">

        <item name="android:datePickerStyle">@color/primary</item>
        <item name="android:dayOfWeekTextAppearance">@color/primary</item>
        <item name="android:endYear">@color/primary</item>
        <item name="android:headerYearTextAppearance">@color/primary</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:yearListItemTextAppearance">@color/primary</item>
        <item name="android:headerBackground">@color/primary</item>
        <item name="android:background">@color/onprimary</item>
        <item name="android:textColorPrimary">@color/primary</item>
    </style>
</resources>